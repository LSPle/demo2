# Flask
FLASK_APP=run.py
FLASK_DEBUG=1
PORT=5000
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me

# Database selection: sqlite or mysql
DB_TYPE=sqlite

# SQLite (default)
# Path to SQLite DB inside backend/data/app.db
SQLITE_DB=backend/data/app.db

# MySQL settings (if DB_TYPE=mysql)
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=flask_app

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TIMEOUT=30
LLM_ENABLED=true